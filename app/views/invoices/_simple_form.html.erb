<%= simple_form_for invoice do |f| %>

<div class="form-title py-3" style ="width:620px; ">
    <h2 class="text-warning">Entrez des factures de cette année</h2>
  </div>

  <form>
  <div class="form-group">
  <%= f.input :object, label: "Objet de la facture", class:"form-control" %>
</div>
  <div class="form-group">

       <%= f.input :amount, label: "Montant", class:"form-control" %><div>
      <div class="form-group">
      <%= f.input :invoiced_at, label: "Date de la facture", as: :date, html5: true, class:"form-control" %></div>
   </form>

  <%= f.submit "Générez votre facture", class: "btn btn-warning"%>

<% end -%>


