<%= simple_form_for invoice do |f| %>
  <%= f.input :object, label: "Objet de la facture" %>
  <%= f.input :amount, label: "Montant" %>
  <%= f.input :invoice_date, label: "Date de la facture", input_html: { class: "invoice-calendar" } %>
  <%= f.association :client, label_method: :client, value_method: :id, include_blank: false %>
  <%= f.submit "Générez votre facture", class: "btn btn-primary"%>
<% end -%>
