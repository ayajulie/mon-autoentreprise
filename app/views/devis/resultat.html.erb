<%= render 'shared/navbar_sansachat' %>
<%= render '/pages/sidebar' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <h2>Recherche de solvabilité de la société</h2>
        <%= form_with( method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :siren, 'Chercher un Siren'%>
            <%= text_field_tag :siren, nil, placeholder: '123896542', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success warning' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @resultat.nil? %>

<%else%>
<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6">
      <h4>info sur la Société</h4>
      <dl>
        <dt>société</dt>
        <dd><%= @resultat['Millesime"=>"2020']['A2_NiveauRentabilite'] %></dd>
        <dt>Capital</dt>
        <dd><%= @resultat['capital'] %></dd>
        <dt>Currency</dt>
        <dd><%= @resultat['currencies'].join(', ') %></dd>
        <dt>Timezone(s)</dt>
        <dd><%= @resultat['timezones'].join(', ') %></dd>
      </dl>
    </div>
  </div>
<% end %>
</div>

